<Window x:Class="mvvm_cvik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mvvm_cvik"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="{Binding ClickCount}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Height="20" Width="50" Content="Click" Command="{Binding ClickCommand}"/>
        </StackPanel>
    </Grid>
</Window>
