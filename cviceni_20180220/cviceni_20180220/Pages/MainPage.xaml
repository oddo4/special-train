<Page x:Class="cviceni_20180220.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cviceni_20180220"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="MainPage">

    <Grid Background="White">
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ListView x:Name="lViewLists" HorizontalAlignment="Right" Height="175" VerticalAlignment="Top" Width="140" Margin="0,10,10,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Název" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnAdd" Content="Přidat" Width="60" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="btnAdd_Click"/>
        <Button x:Name="btnShowList" Content="Zobrazit seznam" Width="100" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,140" Click="btnShowList_Click"/>
        <TextBox x:Name="txtListName" HorizontalAlignment="Right" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Margin="0,0,19,113" Width="120" Height="22"/>
        <Button x:Name="btnCreateList" Content="Vytvořit seznam" Width="100" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,88" Click="btnCreateList_Click"/>
    </Grid>
</Page>
